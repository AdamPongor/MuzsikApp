<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="FretboardWood" format="reference"></attr>
    <attr name="MarkerDot" format="reference"></attr>
    <attr name="MarkerDoubleDot" format="reference"></attr>

    <style name="Marker" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">58dp</item>
        <item name="android:layout_height">20dp</item>
    </style>
    <style name="DottedMarker" parent="Marker">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/MarkerDot</item>
    </style>
    <style name="DoubleDottedMarker" parent="DottedMarker">
        <item name="android:background">?attr/MarkerDoubleDot</item>
    </style>
    <style name="NoteSelector" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">54dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:backgroundTint">#AAAAAA</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>